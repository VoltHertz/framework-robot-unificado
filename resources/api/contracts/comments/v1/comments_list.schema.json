{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["comments", "total", "skip", "limit"],
  "properties": {
    "comments": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "body", "postId", "user"],
        "properties": {
          "id": { "type": ["integer", "string"], "pattern": "^\\d+$" },
          "body": { "type": "string" },
          "postId": { "type": ["integer", "string"], "pattern": "^\\d+$" },
          "user": {
            "type": "object",
            "required": ["id", "username"],
            "properties": {
              "id": { "type": ["integer", "string"], "pattern": "^\\d+$" },
              "username": { "type": "string" }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    },
    "total": { "type": ["integer", "string"], "pattern": "^\\d+$" },
    "skip": { "type": ["integer", "string"], "pattern": "^\\d+$" },
    "limit": { "type": ["integer", "string"], "pattern": "^\\d+$" }
  },
  "additionalProperties": true
}
