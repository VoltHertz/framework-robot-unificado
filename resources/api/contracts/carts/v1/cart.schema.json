{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "cart.schema.json",
  "type": "object",
  "required": ["id", "products", "total", "discountedTotal", "userId", "totalProducts", "totalQuantity"],
  "properties": {
    "id": { "type": "integer" },
    "products": {
      "type": "array",
      "items": {
        "type": "object",
  "required": ["id", "price", "quantity", "total"],
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": ["string", "null"] },
          "price": { "type": ["number", "integer"] },
          "quantity": { "type": "integer" },
          "total": { "type": ["number", "integer"] },
          "discountPercentage": { "type": ["number", "integer"], "nullable": true },
          "discountedPrice": { "type": ["number", "integer"], "nullable": true }
        },
        "additionalProperties": true
      }
    },
    "total": { "type": ["number", "integer"] },
    "discountedTotal": { "type": ["number", "integer"] },
    "userId": { "type": "integer" },
    "totalProducts": { "type": "integer" },
    "totalQuantity": { "type": "integer" }
  },
  "additionalProperties": true
}
