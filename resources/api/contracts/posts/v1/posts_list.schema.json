{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["posts", "total", "skip", "limit"],
  "properties": {
    "posts": {
      "type": "array",
      "items": { "$ref": "#/definitions/post" }
    },
    "total": { "type": "integer" },
    "skip": { "type": "integer", "minimum": 0 },
    "limit": { "type": "integer", "minimum": 0 }
  },
  "definitions": {
    "reactions": {
      "oneOf": [
        { "type": "integer" },
        {
          "type": "object",
          "properties": {
            "likes": { "type": "integer" },
            "dislikes": { "type": "integer" }
          },
          "required": ["likes", "dislikes"],
          "additionalProperties": true
        }
      ]
    },
    "post": {
      "type": "object",
      "required": ["id", "title", "body", "userId", "tags", "reactions"],
      "properties": {
        "id": { "type": "integer" },
        "title": { "type": "string" },
        "body": { "type": "string" },
        "userId": { "type": "integer" },
        "tags": { "type": "array", "items": { "type": "string" } },
        "reactions": { "$ref": "#/definitions/reactions" }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
